<resources>

    <!-- base theme-->
    <style name="Theme.ANTV_base" parent="@style/Theme.Material3.Light" />

    <style name="Theme.ANTV" parent="Theme.ANTV_base">
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
    </style>

    <style name="Theme.ANTV.MainActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">20</item>
    </style>

    <style name="Theme.ANTV.TopBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
    </style>


    <style name="Theme.ANTV.Content">
        <item name="android:weightSum">20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">18</item>
    </style>

    <style name="Theme.ANTV.FragmentContainerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">18</item>
    </style>


    <style name="Theme.ANTV.AppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
    </style>


</resources>